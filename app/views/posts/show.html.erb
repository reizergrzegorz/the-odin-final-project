<h2>Author: <%= link_to @post.user.profile.username, profile_path(@post.user.profile) %></h2>
<p><%= @post.content %></p>

<hr>
<p><strong>Liczba lajk√≥w:</strong> <%= @post.likes.count %></p>

<% if @post.likes.exists?(user: current_user) %>
  <%= button_to "‚ù§Ô∏è Unlike", post_like_path(@post), method: :delete %>
<% else %>
  <%= button_to "ü§ç Like", post_like_path(@post), method: :post %>
<% end %>

<h3>Comments:</h3>

<% if @post.comments.any? %>
  <ul>
    <% @post.comments.each do |comment| %>
      <li>
        <strong><%= link_to comment.user.profile.username, profile_path(comment.user.profile) %>:</strong>
        <%= comment.body %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No comments</p>
<% end %>

<hr>

<h4>Add comment:</h4>
<%= form_with(model: [@post, @comment], local: true) do |f| %>
  <div>
    <%= f.label :body, "Your comment" %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Add comment" %>
  </div>
<% end %>

