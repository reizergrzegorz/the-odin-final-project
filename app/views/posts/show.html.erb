<h2>Author: <%= @post.user.email %></h2>
<p><%= @post.content %></p>

<hr>

<h3>Comments:</h3>

<% if @post.comments.any? %>
  <ul>
    <% @post.comments.each do |comment| %>
      <li>
        <strong><%= comment.user.email || comment.user.email %>:</strong>
        <%= comment.body %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No comments</p>
<% end %>

<hr>

<h4>Add comment:</h4>
<%= form_with(model: [@post, @comment], local: true) do |f| %>
  <div>
    <%= f.label :body, "Your comment" %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Add comment" %>
  </div>
<% end %>

<%= link_to "← Wróć do postów", posts_path %>
