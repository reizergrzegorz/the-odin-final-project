<% if user_signed_in? %>   
    <p><%= current_user.profile.username %> <%= link_to " Sign out ", destroy_user_session_path, method: :delete %></p>
<% end %>

<h1>Posts</h1>

<% @posts.each do |post| %>
    <div>      
        <p>Author: <%= link_to post.user.profile.username, profile_path(post.user.profile) %></p>
        <p><%= truncate(post.content, length: 100) %></p>
        <%= link_to "See more", post_path(post) %>        
    </div><br>
<% end %>

<p>Create a new post <%= link_to "here", new_post_path %></p>